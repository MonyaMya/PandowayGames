{% extends 'base.html.twig' %}

{% block title %}BreakScene index{% endblock %}

{% block body %}
    <h1>BreakScene index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Background</th>
                <th>Description</th>
                <th>SceneN</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for break_scene in break_scenes %}
            <tr>
                <td>{{ break_scene.id }}</td>
                <td>{{ break_scene.background }}</td>
                <td>{{ break_scene.description }}</td>
                <td>{{ break_scene.sceneN }}</td>
                <td>
                    <a href="{{ path('break_scene_show', {'id': break_scene.id}) }}">show</a>
                    <a href="{{ path('break_scene_edit', {'id': break_scene.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('break_scene_new') }}">Create new</a>
{% endblock %}
