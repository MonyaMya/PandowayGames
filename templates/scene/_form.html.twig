{{ form_start(sceneForm) }}
    {{ form_widget(sceneForm) }}



<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#saveButton">
    Break Scene
</button>



<!-- Modal -->
<div class="modal fade" id="saveButton" tabindex="-1" role="dialog" aria-labelledby="saveButtonLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saveButtonLabel">YOUR SCENE HAS BEEN SAVED! YOU DID IT!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ button_label|default('Save') }}</button>
                {{ form_end(sceneForm) }}
            </div>
        </div>
    </div>
</div>