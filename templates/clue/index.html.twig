{% extends 'base.html.twig' %}

{% block title %}Clue index{% endblock %}

{% block body %}
    <h1>Clue index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Background</th>
                <th>XAxis</th>
                <th>YAxis</th>
                <th>ClueName</th>
                <th>ClueImg</th>
                <th>Description</th>
                <th>SceneN</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clue in clues %}
            <tr>
                <td>{{ clue.id }}</td>
                <td>{{ clue.background }}</td>
                <td>{{ clue.xAxis }}</td>
                <td>{{ clue.yAxis }}</td>
                <td>{{ clue.clueName }}</td>
                <td>{{ clue.clueImg }}</td>
                <td>{{ clue.description }}</td>
                <td>{{ clue.sceneN }}</td>
                <td>
                    <a href="{{ path('clue_show', {'id': clue.id}) }}">show</a>
                    <a href="{{ path('clue_edit', {'id': clue.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clue_new') }}">Create new</a>
{% endblock %}
