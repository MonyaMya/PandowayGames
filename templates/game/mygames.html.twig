{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}

    <h1>Hello {{ app.user.name }}!</h1>
    <h2>Game index</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Poster</th>
            <th>MainColor</th>
            <th>SecondaryColor</th>
            <th>Description</th>
            <th>Author</th>
            <th>IsPublished</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for mygame in mygames %}
            <tr>
                <td>{{ mygame.id }}</td>
                <td>{{ mygame.title }}</td>
                <td>{{ mygame.imageFile }}</td>
                <td>{{ mygame.mainColor }}</td>
                <td>{{ mygame.secondaryColor }}</td>
                <td>{{ mygame.description }}</td>
                <td>{{ mygame.author }}</td>
                <td>{{ mygame.isPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('game_show', {'id': mygame.id}) }}">show</a>
                    <a href="{{ path('game_edit', {'id': mygame.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_new') }}">Create new</a>

{% endblock %}
